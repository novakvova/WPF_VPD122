<Window x:Class="WpfAppSimple.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppSimple"
        mc:Ignorable="d"
        Title="Авторизація" Height="240" Width="318">
    <Canvas>
        <Label Content="Ім'я користувача" Canvas.Left="40" Canvas.Top="23" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Height="28" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUserName" Canvas.Left="40" TextWrapping="Wrap" Canvas.Top="51" Width="237" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Height="20"/>

        <Label Content="Пароль" Canvas.Left="40" Canvas.Top="77" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Height="27" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPassword" Canvas.Left="40" TextWrapping="Wrap" Canvas.Top="105" Width="237" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Height="20"/>

        <Button x:Name="btnLogin" Content="Вхід" Width="200" Height="20" Canvas.Left="59" Canvas.Top="159" HorizontalAlignment="Center" VerticalAlignment="Top" />
    </Canvas>
</Window>
